<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/NoteContent">

    <EditText
        android:id="@+id/user_name_dialog"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:inputType="text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/UserNameInput"
        tools:text="User Name"
        android:hint="@string/user_name" />

    <Button
        android:id="@+id/bt_positive"
        android:text="@string/confirm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/bt_negative"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/user_name_dialog"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:text="@string/cancel"
        android:id="@+id/bt_negative"
        app:layout_constraintStart_toEndOf="@+id/bt_positive"
        app:layout_constraintEnd_toEndOf="parent"

        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/user_name_dialog"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
